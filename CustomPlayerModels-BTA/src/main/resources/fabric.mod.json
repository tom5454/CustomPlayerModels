{
  "schemaVersion": 1,
  "id": "cpm",
  "version": "${version}",

  "name": "Customizable Player Models",
  "description": "Customize your minecraft avatar!",
  "authors": [
    "tom5454"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/custom-player-models-fabric",
